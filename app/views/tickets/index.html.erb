<% page_title "Listing tickets" %>

<table>
  <tr>
    <th>Batch</th>
    <th>Email</th>
    <th>Kind</th>
    <th>Status</th>
    <th>Error</th>
  </tr>

<% @tickets.each do |ticket| %>
  <tr>
    <td><%=h ticket.batch_id %></td>
    <td><%=h ticket.email %></td>
    <td><%=h ticket.ticket_kind.title %></td>
    <td><%=h ticket.status %></td>
    <td><%=h ticket.error %></td>
    <td><%= link_to 'Show', ticket %></td>
    <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
    <td><%= link_to 'Destroy', ticket, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New ticket', new_ticket_path %>